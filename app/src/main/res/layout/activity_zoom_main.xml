<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/live_buildin_0"
    android:gravity="center"
    android:orientation="vertical">

    <com.yunbo.surface.widget.ZoomRelativeLayout
        android:id="@+id/zoomView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ff0000" />

    </com.yunbo.surface.widget.ZoomRelativeLayout>

    <TextView
        android:id="@+id/anim_surfaceview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Anim:测试SurfaceView"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/anim_textureview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Anim:测试TextureView"
        android:textColor="@android:color/white" />


    <TextView
        android:id="@+id/drag_surfaceview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Drag:测试SurfaceView"
        android:visibility="gone" />

    <TextView
        android:id="@+id/drag_textureview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Drag:测试TextureView"
        android:visibility="gone" />

</LinearLayout>